<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahActivity">

    <TextView
        android:id="@+id/txtJudulUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Informasi yang ingin di Update"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJudulUpdate"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtDari"
            android:layout_below="@id/txtJudulUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No KTP: "
            android:textSize="20sp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/noKTPLama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31156165456"
            android:layout_weight="1"
            android:textSize="20sp"
            />

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEdt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL"
        >

        <EditText
            android:id="@+id/edtTxtNamaUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:hint="Nama Baru" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEdt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEdt2"
        >

        <EditText
            android:id="@+id/edtTxtAgamaUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:hint="Agama Baru" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/layoutEdt3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btmNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/btm_navbar"
        />


</RelativeLayout>